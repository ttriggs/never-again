<!DOCTYPE html>
<html>
<head>
  <title>Never Again... Boston's Worst Restaurants</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- <div class="parallax">
  <div class="parallax__layer parallax__layer--back"></div>
    <div class="parallax__layer parallax__layer--base">
  </div>
</div>
 -->

<nav class="top-bar sticky" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="/">Never Again...</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section fixed">
    <!-- Left Nav Section -->
    <ul class="left">
      <li class="has-form">
        <div class="row collapse">
          <%= form_tag(restaurants_path, method: 'get') do %>
            <div class="large-8 small-9 columns">
              <%= text_field_tag :search,  params[:search], placeholder: "Search Boston's worst" %>
            </div>
            <div class="large-4 small-3 columns">
              <%= submit_tag "Search", name: nil, class: "alert button" %>
            </div>
          <% end %>
        </div>
      </li>
    </ul>
    <!-- Right Nav Section -->
    <ul class="right">
      <%- if current_user -%>
        <li><%= link_to 'My Account', user_path(current_user) %></li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      <%- else -%>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
      <%- end -%>
    </ul>
  </section>
</nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>


  <%= yield %>


  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
